<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ridorianto.bangun_datar.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELAMAT DATANG DI APLIKASI PERHITUNGAN BANGUN DATAR"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_persegi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="btn_psg"
            android:text="PERSEGI PANJANG" />

        <Button
            android:id="@+id/btn_segitiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btn_sgt"
            android:text="SEGITIGA" />

        <Button
            android:id="@+id/btn_jajar_genjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jj_gj"
            android:text="jajaran_genjang" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="k_pp"
            android:text="keliling persegi panjang" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:onClick="k_p"
            android:layout_height="wrap_content"
            android:text="keliling persegi" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
